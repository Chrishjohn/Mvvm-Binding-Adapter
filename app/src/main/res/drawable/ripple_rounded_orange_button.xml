<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/milano_red"
    tools:targetApi="lollipop">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/vermilion_orange" />
            <corners android:radius="@dimen/_180sdp" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="@color/vermilion_orange"
                android:startColor="@color/vermilion_orange"
                android:type="linear" />
            <corners android:radius="@dimen/_180sdp" />
        </shape>
    </item>
</ripple>